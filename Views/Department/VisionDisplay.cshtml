@model GECPATAN_FACULTY_PORTAL.Models.Department.DepartmentVision

@{
    ViewData["Title"] = "Department Vision";
}

<h3>Vision for <strong class="text-primary">@ViewBag.DepartmentName</strong></h3>
<hr />

@if (!string.IsNullOrWhiteSpace(Model.VisionText))
{
    <p>@Model.VisionText</p>
}
else
{
    <p class="text-muted">No vision has been added yet.</p>
}

<a asp-action="ManageVision" asp-route-departmentId="@Model.DeptId" class="btn btn-sm btn-primary mt-3">
    Edit / Manage Vision
</a>

@model GECPATAN_FACULTY_PORTAL.Models.Department.Department

@{
    ViewData["Title"] = "Create Department";
}

<h2>Create Department</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Slogan"></label>
        <input asp-for="Slogan" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Tagline"></label>
        <input asp-for="Tagline" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="About"></label>
        <input asp-for="About" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ShowIntake"></label>
        <input asp-for="ShowIntake" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

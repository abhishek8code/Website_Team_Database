@model GECPATAN_FACULTY_PORTAL.Models.Department.Department

@{
    ViewData["Title"] = "Edit Department";
}

<h2>Edit Department</h2>

<form asp-action="Edit">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Image" class="control-label"></label>
        <input asp-for="Image" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Slogan" class="control-label"></label>
        <input asp-for="Slogan" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Tagline" class="control-label"></label>
        <input asp-for="Tagline" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="TitleImage" class="control-label"></label>
        <input asp-for="TitleImage" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="About" class="control-label"></label>
        <textarea asp-for="About" class="form-control"></textarea>
    </div>

    <div class="form-group form-check">
        <input asp-for="ShowIntake" class="form-check-input" type="checkbox" />
        <label asp-for="ShowIntake" class="form-check-label"></label>
    </div>

    <div class="form-group form-check">
        <input asp-for="IsDeleted" class="form-check-input" type="checkbox" />
        <label asp-for="IsDeleted" class="form-check-label"></label>
    </div>

    <div class="form-group">
        <label asp-for="CreatedBy" class="control-label"></label>
        <input asp-for="CreatedBy" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="UpdatedBy" class="control-label"></label>
        <input asp-for="UpdatedBy" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="CreatedDate" class="control-label"></label>
        <input asp-for="CreatedDate" class="form-control" type="datetime-local" />
    </div>

    <div class="form-group">
        <label asp-for="UpdatedDate" class="control-label"></label>
        <input asp-for="UpdatedDate" class="form-control" type="datetime-local" />
    </div>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

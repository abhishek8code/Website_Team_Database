@model IEnumerable<GECPATAN_FACULTY_PORTAL.Models.Department.DepartmentMission>

@{
    ViewData["Title"] = "Department Missions";
}

<h3>Mission Statements for <strong class="text-primary">@ViewBag.DepartmentName</strong></h3>

<a asp-action="AddMission"
   asp-controller="Department"
   asp-route-departmentId="@ViewBag.DepartmentId"
   class="btn btn-success mb-3">
    + Add Mission
</a>

@if (!Model.Any())
{
    <div class="alert alert-info">No missions have been added yet.</div>
}
else
{
    <ul class="list-group">
        @foreach (var item in Model)
        {
            <li class="list-group-item">
                <i class="fas fa-check-circle text-success me-2"></i>
                @item.MissionText
            </li>
        }
    </ul>
}

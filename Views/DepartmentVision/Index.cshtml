@model IEnumerable<GECPATAN_FACULTY_PORTAL.Models.Department.DepartmentVision>

@{
    ViewData["Title"] = "All Department Visions";
}

<h2>Department Vision List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Department</th>
            <th>Vision</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.DeptId</td>
                <td>@item.VisionText</td>
                <td>
                    <a asp-action="ManageVision" asp-route-departmentId="@item.DeptId">Edit</a> |
                    <a asp-action="ViewVision" asp-route-departmentId="@item.DeptId">View</a>
                </td>
            </tr>
        }
    </tbody>
</table>

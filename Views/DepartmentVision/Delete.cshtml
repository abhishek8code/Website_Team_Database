@model GECPATAN_FACULTY_PORTAL.Models.Department.DepartmentVision

@{
    ViewData["Title"] = "Delete DepartmentVision";
}

<h2>Are you sure you want to delete this vision?</h2>
<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="DeptId" />
    <div class="form-group">
        <label asp-for="VisionText"></label>
        <p>@Model.VisionText</p>
    </div>
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

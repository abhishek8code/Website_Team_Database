@model GECPATAN_FACULTY_PORTAL.Models.Department.DepartmentVision

@{
    ViewBag.Title = "Department Vision";
    var departmentId = ViewBag.DepartmentId;
    var hasVision = ViewBag.HasVision as bool? ?? false;
}

<h2>Vision for @ViewBag.DepartmentName</h2>

@if (!hasVision)
{
    <div class="alert alert-warning">No vision found for this department.</div>
    <a class="btn btn-primary" href="@Url.Action("ManageVision", "Department", new { departmentId = departmentId })">Add Vision</a>
}
else
{
    <p>@Model.VisionText</p>
    <a class="btn btn-warning" href="@Url.Action("ManageVision", "Department", new { departmentId = departmentId })">Edit Vision</a>
}


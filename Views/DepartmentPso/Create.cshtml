@model GECPATAN_FACULTY_PORTAL.Models.Department.DepartmentPso

@{
    ViewData["Title"] = "Add PSO";
}

<h4>Add PSO Statement</h4>
<hr />

<form asp-action="AddPsos" method="post">
    <input type="hidden" asp-for="DeptId" />

    <div class="form-group">
        <label asp-for="Psotext" class="control-label">PSO Text</label>
        <textarea asp-for="Psotext" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Psotext" class="text-danger"></span>
    </div>

    <br />
    <button type="submit" class="btn btn-primary">Add</button>
    <a asp-action="DepartmentPsos" asp-route-departmentId="@Model.DeptId" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

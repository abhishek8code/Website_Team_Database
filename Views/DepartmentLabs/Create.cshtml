@model GECPATAN_FACULTY_PORTAL.Models.Department.DepartmentLabs
@{
    ViewData["Title"] = "Add Lab";
}
<h4>Add Lab for Department: <span class="text-primary">@ViewBag.DepartmentId</span></h4>
<form asp-action="AddLab" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="DeptId" />

    <div class="form-group">
        <label asp-for="LabName"></label>
        <input asp-for="LabName" class="form-control" />
        <span asp-validation-for="LabName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Lab Image</label>
        <input type="file" name="LabImageFile" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="LabDetails"></label>
        <textarea asp-for="LabDetails" class="form-control" rows="4"></textarea>
        <span asp-validation-for="LabDetails" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Add Lab</button>
    <a asp-action="DepartmentLabs" asp-route-departmentId="@Model.DeptId" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

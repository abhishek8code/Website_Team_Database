@model GECPATAN_FACULTY_PORTAL.Models.Department.DepartmentLab

@{
    ViewData["Title"] = "Edit Lab";
}

<h4>Edit Lab for Department: <span class="text-primary">@Model.DeptId</span></h4>
<hr />

<form asp-action="EditLab" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="LabId" />
    <input type="hidden" asp-for="DeptId" />

    <div class="form-group">
        <label asp-for="LabName"></label>
        <input asp-for="LabName" class="form-control" />
        <span asp-validation-for="LabName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Current Image</label><br />
        @if (!string.IsNullOrEmpty(Model.LabImage))
        {
            <img src="~/@Model.LabImage" style="max-height: 100px;" />
        }
        else
        {
            <span class="text-muted">No image</span>
        }
    </div>

    <div class="form-group">
        <label>Upload New Image</label>
        <input type="file" name="LabImageFile" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="LabDetails"></label>
        <textarea asp-for="LabDetails" class="form-control" rows="4"></textarea>
        <span asp-validation-for="LabDetails" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="DepartmentLab" asp-route-departmentId="@Model.DeptId" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

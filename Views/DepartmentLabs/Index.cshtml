@model IEnumerable<GECPATAN_FACULTY_PORTAL.Models.Department.DepartmentLabs>
@{
    ViewData["Title"] = "Labs";
}
<h3>Labs for @ViewBag.DepartmentName</h3>

<a asp-action="AddLab" asp-route-departmentId="@ViewBag.DepartmentId" class="btn btn-success mb-3">+ Add Lab</a>

@if (!Model.Any())
{
    <div class="alert alert-info">No labs added yet.</div>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Lab Name</th>
                <th>Lab Image</th>
                <th>Lab Details</th>
                <th>Edit</th> <!-- Changed from Actions to Edit -->
            </tr>
        </thead>
        <tbody>
            @foreach (var lab in Model)
            {
                <tr>
                    <td>@lab.LabName</td>
                    <td>
                        @if (!string.IsNullOrEmpty(lab.LabImage))
                        {
                            <img src="~/@lab.LabImage" style="max-height: 80px;" />
                        }
                        else
                        {
                            <span class="text-muted">No Image</span>
                        }
                    </td>
                    <td>@lab.LabDetails</td>
                    <td>
                        <a asp-action="EditLab"
                           asp-route-id="@lab.LabId"
                           class="btn btn-sm btn-warning">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    
}

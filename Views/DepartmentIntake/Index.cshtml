@model IEnumerable<GECPATAN_FACULTY_PORTAL.Models.Department.DepartmentIntake>

@{
    ViewData["Title"] = "Department Intake Records";
}

<h4>Intake Records for Department: <strong class="text-primary">@ViewBag.DepartmentName</strong></h4>
<hr />

<p>
    <a asp-action="AddIntake" asp-route-departmentId="@ViewBag.DepartmentId" class="btn btn-primary">+ Add New Intake</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Department</th>
            <th>Year</th>
            <th>Intake Count</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Dept?.Name</td>
                <td>@(item.IntakeYear?.ToString("yyyy"))</td>
                <td>@item.IntakeCount</td>
                <td>
                    <a asp-action="EditIntake" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="DeleteIntake" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

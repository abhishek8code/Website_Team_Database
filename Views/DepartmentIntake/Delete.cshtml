@model GECPATAN_FACULTY_PORTAL.Models.Department.DepartmentIntake

@{
    ViewData["Title"] = "Delete Intake";
}

<h4>Are you sure you want to delete this intake?</h4>

<div>
    <dl class="row">
        <dt class="col-sm-3">Department</dt>
        <dd class="col-sm-9">@Model.Dept.Name</dd>

        <dt class="col-sm-3">Year</dt>
        <dd class="col-sm-9">@Model.IntakeYear?.ToString("yyyy")</dd>

        <dt class="col-sm-3">Count</dt>
        <dd class="col-sm-9">@Model.IntakeCount</dd>
    </dl>
</div>

<form asp-action="DeleteIntake" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="DepartmentIntakes" asp-route-departmentId="@Model.DeptId" class="btn btn-secondary">Cancel</a>
</form>

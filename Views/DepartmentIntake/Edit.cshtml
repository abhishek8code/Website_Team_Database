@model GECPATAN_FACULTY_PORTAL.Models.Department.DepartmentIntake

@{
    ViewData["Title"] = "Edit Intake";
}

<h4>Edit Department Intake</h4>

@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<form asp-action="EditIntake" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="DeptId" />

    <div class="form-group">
        <label asp-for="IntakeYear" class="control-label">Intake Year</label>
        <input asp-for="IntakeYear" class="form-control" type="date" />
        <span asp-validation-for="IntakeYear" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IntakeCount" class="control-label">Intake Count</label>
        <input asp-for="IntakeCount" class="form-control" />
        <span asp-validation-for="IntakeCount" class="text-danger"></span>
    </div>

    @if (Model.UpdatedDate != null)
    {
        <div class="form-group">
            <label>Last Updated</label>
            <input class="form-control" value="@Model.UpdatedDate?.ToString("g")" disabled />
        </div>
    }

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Update</button>
        <a asp-action="DepartmentIntakes" asp-route-departmentId="@Model.DeptId" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
